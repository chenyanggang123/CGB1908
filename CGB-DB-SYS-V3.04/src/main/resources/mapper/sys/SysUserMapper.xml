<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cy.pj.sys.dao.SysUserDao">
   
    <update id="updateObject">
        update sys_users
        set username=#{username},
            mobile=#{mobile},
            email=#{email},
            deptId=#{deptId},
            modifiedTime=now(),
            modifiedUser=#{modifiedUser}
         where id=#{id}
    </update>

    <!-- 基于用户id查询用户以及用户对应的部门信息 -->
    <select id="findObjectById"
            resultMap="sysUserDeptVo">
        select *
        from sys_users
        where id=#{id}
    </select>
	<insert id="insertObject"
		parameterType="com.cy.pj.sys.entity.SysUser" useGeneratedKeys="true"
		keyProperty="id">
		insert into sys_users
		(username,password,deptId,email,mobile,salt,valid,
		createdTime,modifiedTime,createdUser,modifiedUser)
		values
		(#{username},#{password},#{deptId},#{email},#{mobile},#{salt},#{valid},
		now(),now(),#{createdUser},#{modifiedUser})
	</insert>
    
    <!-- 修改用户状态(禁用启用状态实现) -->
    <update id="validById">
        update sys_users
        set valid=#{valid},
            modifiedUser=#{modifiedUser},
            modifiedTime=now()
        where id=#{id}
    </update>
    <!-- sql元素用于对共性进行提取 -->
    <sql id="queryWhereId">
         from sys_users
         <where>
            <if test="username!=null and username!=''">
              username like concat("%",#{username},"%")
            </if>
         </where>
    </sql>
    <!-- 基于条件统计记录总数 -->
    <select id="getRowCount" resultType="int">
         select count(*)
         <include refid="queryWhereId"/>
    </select>
    <resultMap type="com.cy.pj.sys.vo.SysUserDeptVo" 
               id="sysUserDeptVo">
          <id property="id" column="id"/>
          <!-- 
           association 元素一般应用于一些关联查询或嵌套中
                      用于实现one2one 或者many2one映射
           -->
          <association property="sysDept"
                       column="deptId"
                       select="com.cy.pj.sys.dao.SysDeptDao.findById">
          </association>
    </resultMap>
    <!-- 基于条件查询当前页记录 
         每个SQL元素信息都会封装为一个MappedStatement对象-->
    <select id="findPageObjects"
            resultMap="sysUserDeptVo">
          select *
          <include refid="queryWhereId"/>
          order by createdTime desc
          limit #{startIndex},#{pageSize} 
    </select>
</mapper>
